{
  "width": 900,
  "height": 400,

  "data": [
    {
      "name": "life",
      "url": "life_gnp.json"
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "domain": {"data": "life", "field": "LifeExpectancy"},
      "range": "width",
      "nice": true,
      "zero": false,
      "round": false
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "life", "field": "GNP"},
      "range": "height",
      "nice": true,
      "zero": false,
      "round": false
    }
  ],

  "axes": [
    {
      "type": "x",
      "title": "Life Expectancy",
      "scale": "xscale"
    },
    {
      "type": "y",
      "title": "GDP",
      "titleOffset": 70,
      "scale": "yscale"
    }
  ],

  "marks": [
    {
      "type": "line",
      "from": { "data": "life" },
      "properties": {
        "enter": {
          "interpolate": { "value": "linear" },
          "x": { "scale": "xscale", "field": "LifeExpectancy"},
          "y": { "scale": "yscale", "field": "GNP"},
          "stroke": {"value": "#000"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "symbol",
      "from": { "data": "life" },
      "properties": {
        "enter": {
          "x": { "scale": "xscale", "field": "LifeExpectancy"},
          "y": { "scale": "yscale", "field": "GNP"},
          "fill": {"value": "#fff"},
          "stroke": {"value": "#000"},
          "strokeWidth": {"value": 1},
          "size": {"value": 49}
        },
        "hover": { "fill": { "value": "#f00" } },
        "update": { "fill": { "value": "#fff" } }
      }
    }

  ]
}